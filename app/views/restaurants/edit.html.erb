<%= link_to "Back to #{@restaurant.name}", restaurant_path(@restaurant), class: 'btn btn-secondary' %>
<hr>

<%if flash[:notice].present? %>
<div class= 'alert alert-success'>
<%= flash[:notice] %>
</div>
<%end %>

<div class="container">
<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :adress %>
  <%= f.input :rating %>
  <%= f.input :category %>
  <%= f.submit %>
<% end %>
</div>
